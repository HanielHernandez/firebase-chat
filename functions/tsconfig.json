{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true, // This flag helps with compatibility
    "skipLibCheck": true // This can be helpful to avoid issues with third-party typings
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
