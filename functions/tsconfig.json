{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "rootDir": "src", // Source files are in src/
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true, // Ensure compatibility with commonjs modules
    "target": "ES6"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
